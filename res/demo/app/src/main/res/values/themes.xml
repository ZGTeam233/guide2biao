<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- 基础主题，供整个应用使用 -->
    <style name="Base.Theme.Demo" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 定制你的主题颜色 -->
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryDark">@color/green_700</item>
        <item name="colorAccent">@color/translucent_200</item>
        <!-- 关键：设置全屏，隐藏状态栏 -->
        <item name="android:windowFullscreen">true</item>
        <!-- 禁止系统装饰（如状态栏）的半透明效果，实现更纯粹的全屏 -->
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>

    <!-- 最终使用的主题，继承自基础主题。便于针对不同API版本或配置进行微调 -->
    <style name="Theme.Demo" parent="Base.Theme.Demo" />

    <!-- 专门为你的全屏Activity定义的主题 -->
    <style name="Theme.Demo.Fullscreen" parent="Theme.Demo">
        <!-- 设置一个纯黑色背景确保无任何干扰 -->
        <item name="android:windowBackground">@color/black</item>
    </style>
</resources>